<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Stats for today"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:background="@drawable/stats_text_border"
                android:orientation="vertical"
                android:weightSum="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:text="Calories Burned:"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvCalsBurned"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="15750 calories"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:background="@drawable/stats_text_border"
                android:orientation="vertical"
                android:weightSum="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Miles Run:"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMilesRun"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="27 miles"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:background="@drawable/stats_text_border"
                android:orientation="vertical"
                android:weightSum="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:layout_height="0dp"
                    android:text="Objectives Completed:"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvObjectivesCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="6 objectives"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="2dp"
                android:padding="3dp"
                android:background="@drawable/stats_text_border"
                android:orientation="vertical"
                android:weightSum="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="1dp"
                    android:layout_height="0dp"
                    android:text="Points Earned:"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tvPointsEarned"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="3400 points"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnDailyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Daily"
                    android:layout_weight="1"
                    android:background="@drawable/my_button_bg" />

                <Button
                    android:id="@+id/btnWeeklyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Weekly"
                    android:layout_weight="1"
                    android:background="@drawable/my_button_bg" />

                <Button
                    android:id="@+id/btnMonthlyStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="Monthly"
                    android:layout_weight="1"
                    android:background="@drawable/my_button_bg" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>