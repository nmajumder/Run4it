<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight=".1"/>

    <TextView
        android:id="@+id/tvCalsBurned"
        android:layout_width="match_parent"
        android:text="Calories Burned:"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorTextFields"
        android:layout_weight=".15"/>

    <TextView
        android:id="@+id/tvMilesRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Miles Run:"
        android:textStyle="bold"
        android:textColor="@color/colorTextFields"
        android:layout_weight=".15"/>

    <TextView
        android:id="@+id/tvObjectivesCompleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objectives Completed:"
        android:textStyle="bold"
        android:textColor="@color/colorTextFields"
        android:layout_weight=".15"/>

    <TextView
        android:id="@+id/tvPointsEarned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Points Earned:"
        android:textStyle="bold"
        android:textColor="@color/colorTextFields"
        android:layout_weight=".15"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".3"
        android:weightSum="3">

        <Button
            android:id="@+id/btnDailyStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg" />

        <Button
            android:id="@+id/btnWeeklyStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg" />


        <Button
            android:id="@+id/btnMonthlyStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg" />

        />

    </LinearLayout>
</LinearLayout>